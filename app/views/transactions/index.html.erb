<div><h1>Transactions</h1></div>
<div>
  <table>
    <thead>
      <tr>
        <th>Code</th>
        <th>Transaction</th>
        <th>Client</th>
        <th>Manager</th>
      </tr>
    </thead>
    <tbody>
      <% @transactions.each do |transaction| %>
        <tr>
          <td>
            <%= transaction.uid %>
          </td>
          <td>
            <%= number_to_currency(transaction.from_amount, unit: transaction.from_currency,
                                  separator: ",", delimiter: " ", format: "%n %u") %>
            ->
            <%= number_to_currency(transaction.to_amount, unit: transaction.to_currency,
                                  separator: ",", delimiter: " ", format: "%n %u") %>
          </td>
          <td>
            <%= transaction.client_full_name %>
          </td>
          <td>
            <% if transaction.manager %>
              <%= transaction.manager.full_name %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <ul class="links-list">
    <% %w(small large extra).each do |type| %>
      <li><%= link_to transaction_form_header(type), new_transaction_path(type: type) %></li>
    <% end %>
  </ul>
</div>
