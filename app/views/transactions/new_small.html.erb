<h1><%= transaction_form_header(@transaction_type) %></h1>
<ul class="links-list">
  <% %w(small large extra).reject{ |type| type == @transaction_type }.each do |type| %>
    <li><%= link_to transaction_form_header(type), new_transaction_path(type: type) %></li>
  <% end %>
</ul>

<%= form_with model: @transaction do |form| %>
  <%= form.hidden_field :from_currency, value: 'USD' %>
  <%= hidden_field_tag :type, @transaction_type %>

  <% unless @transaction_type = 'small' %>
    <div class="form-group">
      <%= form.label :first_name %>
      <%= form.text_field :first_name, autocomplete: 'off' %>
      <% @transaction.errors.full_messages_for(:first_name).each do |message| %>
        <div class="error"><%= message %></div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :last_name %>
      <%= form.text_field :last_name, autocomplete: 'off' %>
      <% @transaction.errors.full_messages_for(:last_name).each do |message| %>
        <div class="error"><%= message %></div>
      <% end %>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :from_amount, 'Amount(USD)' %>
    <%= form.text_field :from_amount, autocomplete: 'off' %>
    <% @transaction.errors.full_messages_for(:from_amount).each do |message| %>
      <div class="error"><%= message %></div>
    <% end %>
  </div>

  <% if @transaction_type == 'extra' %>
    <div class="form-group">
      <%= form.label :from_currency %>
      <%= form.select :from_currency, Transaction::AVAILABLE_CURRENCIES %>
      <% @transaction.errors.full_messages_for(:from_currency).each do |message| %>
        <div class="error"><%= message %></div>
      <% end %>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :to_currency %>
    <%= form.select :to_currency, Transaction::AVAILABLE_CURRENCIES - ['USD'] %>
    <% @transaction.errors.full_messages_for(:to_currency).each do |message| %>
      <div class="error"><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

